{
  "name": "prueba-aeromexico",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n FRONT,API -c magenta,green \"npm run dev:next\" \"npm run dev:api\"",
    "dev:next": "next dev",
    "dev:api": "json-server --watch json-server/db.json --port 4000",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint-staged": "lint-staged",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,mdx,scss}\"",
    "prettier:format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx,scss}\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test": "jest",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "axios": "^1.13.2",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sass": "^1.93.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "json-server": "^1.0.0-beta.3",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5"
  }
}
